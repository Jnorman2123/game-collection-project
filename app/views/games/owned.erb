<h1>These are your games</h1>

<% @owned_games.each do |game| %>
    <a href="/games/<%= game.id %>"><%= game.name%></a><br>
<% end %>
<br>
<h2>Add a new game to your owned list</h2>
<form method="POST" action="/games/owned">

  <% @owned_consoles.each do |console| %>
    <input type="radio" name="console_id" id="<%= console.id %>" value="<%= console.id %>">&nbsp
    <a href="/consoles/<%= console.id %>"><%= console.name %></a>
  </input>
  <br>
  <% end %>

  <label for="name">Name:<label>
  <input type="text" name="name">

  <input type="submit" value="Add Game To Owned">
</form>
