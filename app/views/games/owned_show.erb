<h1>Show page for this game</h1>

<h3><%= @game.name %></h3>

<h2>You currently own this game</h2>
<h2>Remove this game from owned list</h2>

<form action="/games/<%= @game.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Remove">
</form>

<h2>Edit this game</h2>

<form action="/games/<%= @game.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="name">Name:</label>
  <input type="text" name="name">

  <h3>Select which console the game is on</h3>

  <% @owned_consoles.each do |console| %>
    <input type="radio" name="console_id" id="<%= console.id %>" value="<%= console.id %>">&nbsp
    <a href="/consoles/<%= console.id %>"><%= console.name %></a>
    </input>
    <br>
  <% end %>

  <input type="submit" value="Edit">
</form>
