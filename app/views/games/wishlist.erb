<h1>This is your game wishlist</h1>

<h2>Add purchased games to your owned list</h2>
<br>
<form method="POST" action="/games/owned">
  <% @wishlist_games.each do |game| %>
    <input type="radio" name="game_id" id="<%= game.id %>" value="<%= game.id %>">&nbsp
    <a href="/games/<%= game.id %>"><%= game.name %></a> Price: $<%= game.price %>
    </input>
    <br>
  <% end %>
  <h3>Select which console the game is on</h3>
  <% @owned_consoles.each do |console| %>
    <input type="radio" name="console_id" id="<%= console.id %>" value="<%= console.id %>">&nbsp
    <a href="/consoles/<%= console.id %>"><%= console.name %></a>
    </input>
    <br>
  <% end %>

  <input type="submit" value="Add Selected Game(s) to Owned">
</form>
<br>
<h2>Add a new game to your wishlist</h2>
<form method="POST" action="/games/wishlist">

  <label for="name">Name:<label>
  <input type="text" name="name">

  <label for="price">Price:<label>
  <input type="text" name="price">

  <input type="submit" value="Add Game To Wishlist">
</form>
