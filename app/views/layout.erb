  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>GameCollectionProject</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">

      <% flash.keys.each do |type| %>
        <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
        </div>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <h4>
          <a href="/consoles/wishlist">Console Wishlist</a>&nbsp
          <a href="/consoles/owned">Owned Console(s)</a>&nbsp

          <a href="/games/wishlist">Game Wishlist</a>&nbsp
          <a href="/games/owned">Owned Game(s)</a>&nbsp

          <a href="/users/home">User Home Page</a>
        </h4>
        <% if logged_in? %>
          <form method="POST" action="/users/logout">
            <input type="submit" value="Log Out">
          </form>
        <% end %>
        <small>&copy; 2019 <strong>GameCollectionProject</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
